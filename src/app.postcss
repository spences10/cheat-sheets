@tailwind base;

html {
	scroll-behavior: smooth;
}

::selection {
	color: hsl(var(--pc));
	background: hsl(var(--p));
}

.table-of-contents {
	z-index: 1;
	position: fixed;
	left: calc(50% + 400px);
	top: 18rem;
	max-height: 50vh;
	width: 310px;
	padding: 0.75rem;
	margin: 0.75rem 0;
	font-size: 1rem;
	line-height: 1.75rem;
}

/* Scrollbar styles */

/* Firefox */
* {
	scrollbar-width: thin;
	scrollbar-color: hsl(var(--s)) hsl(var(--p));
}

/* Chrome, Edge, and Safari */
*::-webkit-scrollbar {
	width: 15px;
}

*::-webkit-scrollbar-track {
	background: hsl(var(--p));
	border-radius: 5px;
}

*::-webkit-scrollbar-thumb {
	background-color: hsl(var(--s));
	border-radius: 14px;
	border: 3px solid hsl(var(--p));
}

@tailwind components;
@tailwind utilities;
