@tailwind base;
/* Write your global styles here, in PostCSS syntax */
html {
  scroll-behavior: smooth;
  margin-left: calc(100vw - 100%);
}

:root {
  /* Default is Dark */
  --bg-color: #3d4451;
  --primary: #793ef9;
  --secondary: #f000b8;
  background-color: var(--bg-color);
}
